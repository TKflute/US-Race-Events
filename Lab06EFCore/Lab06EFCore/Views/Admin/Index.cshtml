@model IEnumerable<Race>

@{
    ViewBag.Title = "All Races";
    Layout = "_AdminLayout";
}


<table class="table table-bordered table-striped table-condensed">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.RaceId</td>
            <td>@item.Name</td>
            <td class="text-right">@item.RegistrationFee.ToString("c")</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-raceId="@item.RaceId">Edit</a>
                    <input type="hidden" name="RaceId" value="@item.RaceId" />
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Race</a>
</div>




